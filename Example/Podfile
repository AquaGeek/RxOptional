  pod 'RxOptional', :path => '../'
  pod 'RxSwift', '~> 2.0'
  pod 'RxCocoa', '~> 2.0'
end

target 'RxOptional_Tests', :exclusive => true do
  pod 'RxOptional', :path => '../'

  pod 'Quick', '~> 0.8.0'
  pod 'Nimble', :git => 'https://github.com/Quick/Nimble.git', :branch => 'master'
end
